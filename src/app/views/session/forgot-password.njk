{% extends "layout.njk" %}

{% block content %}

    <section class="password container-form">
        <form class="card" method="POST" action="/users/forgot-password">

            <div class="header">
                <h3>Esqueceu a senha?</h3>
            </div>

            <div class="fields">
                <div class="item">
                    <div>E-mail</div>
                    <div class="input">
                        <input type="email" name="email" placeholder="Digite e e-mail cadastrado" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar Senha</button>

        </form>
    </section>

{% endblock content %}